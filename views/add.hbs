<h1>Add page</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="1" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter img URL"></span>
    </div>

    <button class="btn btn-primary" type="submit">Add course</button>
</form>