<h1>Edit '{{course.title}}' course</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}">
        <label for="title">New title</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="1" value="{{course.price}}">
        <label for="price">New price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{course.img}}">
        <label for="img">New image URL</label>
        <span class="helper-text" data-error="Enter img URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary" type="submit">Edit course</button>
</form>